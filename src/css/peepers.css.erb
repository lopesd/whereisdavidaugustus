#leaderboards-title {
  width: 100%;
  text-align: center;
  font-size: 1.5rem;
  font-weight: bold;
}

#leaderboards-title-explanation {
  font-size: 0.75rem;
  font-weight: normal;
}

.leaderboard-table-wrapper {
  padding: 1rem;
}

.leaderboard-types-wrapper {
  width: 100%;
  text-align: center;
  margin-bottom: 1rem;

  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;

  border-color: grey;
}

.leaderboard-type-vertical-line {
  height: 1rem;
  width: 1px;
  border-right: 1px solid grey;
}

.leaderboard-type-button {
  padding: 1rem 1rem;

  background-color: transparent;
  border: none;
  cursor: pointer;

  font-family: inherit;
}

.leaderboard-type-button:active {
  background-color: #dbdbdb;
  outline: none;
}

.leaderboard-type-button.selected {
  font-size: 1.1rem;
  font-weight: bold;
}

.leaderboard-type-emoji {
  display: none;
}

.leaderboard-type-emoji.selected {
  display: block;
}

.leaderboard-table {
  width: 100%;
}

.leaderboard-table-divider {
  height: 1px;
  padding: 1.5rem 0rem;
}

.leaderboard-table th {
  text-align: left;
}

#chapter-headers {
  width: 100%;

  z-index: 1;

  border: 1px solid grey;
  border-radius: 3px;
  background-color: white;

  margin-top: 1rem;
  margin-bottom: 1rem;
}

.chapter-header-container.current-chapter {
  display: flex;
}

.chapter-header-container {
  height: 3rem;
  align-items: center;

  display: none;
}

#chapters-header-chapter-name {
  flex-grow: 1;
  text-align: center;
}

#chapter-name-text {
  font-size: 1.2rem;
  font-weight: bold;
}

#chapter-number-text {
  font-weight: bold;
  font-size: 0.75rem;
}

.chapters-header-arrow {
  height: 100%;

  flex-grow: 0;
  color: #4e69b4;
  font-size: 1.5rem;
  padding: 0rem 1rem;

  background-color: transparent;
  border: none;
  cursor: pointer;
}

.chapters-header-arrow:active {
  background-color: #dbdbdb;
  outline: none;
}

.chapters-header-arrow.hidden {
  visibility: hidden;
}

.chapters-header-arrow-text-flex-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.leaderboards-container {
  display: none;
}

.leaderboards-container.current-chapter {
  display: block;
  padding: 1rem;
}

.leaderboard-type-container {
  display: none;
}

.leaderboard-type-container.selected-type {
  display: block;
}

.leaderboard-type-title {
  text-align: center;
  font-weight: bold;
}

.leaderboard-table tr:nth-child(even) {
  background-color: #f2f2f2;
}

.leaderboard-table tr.first {
  font-weight: bold;
  background-color: gold;
}

.leaderboard-table tr.second {
  font-weight: bold;
  background-color: silver;
}

.leaderboard-table tr.third {
  font-weight: bold;
  background-color: peru;
}

#bottom-spacer {
  height: 0.5rem;
}