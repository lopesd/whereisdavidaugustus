// UTIL
function sleep(ms) {
  return new Promise(resolve => setTimeout(resolve, ms));
}

function sanitize(string) {
  const sanitizeMap = {
      '&': '&amp;',
      '<': '&lt;',
      '>': '&gt;',
      '"': '&quot;',
      "'": '&#x27;',
      "/": '&#x2F;',
  }
  const reg = /[&<>"'/]/ig
  return string.replace(reg, match => sanitizeMap[match])
}

// BUTTON CALLBACKS
async function onClickPeepButton(event) {
  const el = event.target
  const parentEl = el.parentElement
  const wrapperEl = parentEl.parentElement
  const inputEl = parentEl.querySelector('.checkin-peeper-name-input')
  const peeperName = inputEl.value
  if (!peeperName) {
    inputEl.placeholder = 'name is required dummy'
    return
  }

  // enter loading state
  el.disabled = true
  el.innerHTML = '...'
  inputEl.disabled = true

  // send post
  const checkinId = parentEl.dataset.checkinId
  let peep
  try {
    peep = await postPeep(checkinId, peeperName)
  } catch (e) {
    console.error(e)
    wrapperEl.innerHTML = renderPeeperPane({ errored: true })
    return
  }

  // exit loading state and update html
  wrapperEl.innerHTML = renderPeeperPane({ attemptedPeeper: peeperName, peep })
}

